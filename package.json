{
  "name": "kanjivg-js",
  "version": "1.0.17",
  "description": "TypeScript/React library for searching and animating kanji",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/core/index.d.ts",
  "files": [
    "dist",
    "kanji",
    "kvg-index.json",
    "vite-plugin.js",
    "webpack-plugin.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.esm.js",
      "require": "./dist/react.js",
      "types": "./dist/components/index.d.ts"
    },
    "./vite-plugin": {
      "import": "./vite-plugin.js",
      "require": "./vite-plugin.js"
    },
    "./webpack-plugin": {
      "import": "./webpack-plugin.js",
      "require": "./webpack-plugin.js"
    }
  },
  "sideEffects": [
    "**/*.svg"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:radical-index": "ts-node scripts/build-radical-index.ts",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run build:types",
    "release-github": "scripts/release.sh",
    "release-npm": "npm run prepublishOnly && npm publish --access public",
    "bump:patch": "npm version patch -m 'chore: release %s'",
    "bump:minor": "npm version minor -m 'chore: release %s'",
    "bump:major": "npm version major -m 'chore: release %s'",
    "release-npm:patch": "npm run bump:patch && npm run release-npm",
    "release-npm:minor": "npm run bump:minor && npm run release-npm",
    "release-npm:major": "npm run bump:major && npm run release-npm"
  },
  "keywords": [
    "kanji",
    "japanese",
    "svg",
    "animation",
    "react",
    "typescript"
  ],
  "author": "KanjiVG-js Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tempo-eng/kanjivg-js.git"
  },
  "dependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-typescript": "^11.1.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.9.1",
    "@types/react": "^18.2.37",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "rollup": "^4.6.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}